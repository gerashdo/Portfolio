---
interface Props {
  text: string
}

const { text } = Astro.props;
---
<div class="pill text-smallest">
  {text}
</div>

<style>
  .pill {
    background-color: var(--primary-transparent);
    color: var(--primary);
    border-radius: 1rem;
    padding: 0.375rem 0.75rem;
    display: inline-block;
    margin-inline-end: 0.25rem;
    margin-block-start: 0.375rem;
  }
</style>
